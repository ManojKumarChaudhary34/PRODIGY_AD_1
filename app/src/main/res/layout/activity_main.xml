<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="45sp"
        android:layout_marginEnd="12dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/result_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="="
        android:textAlignment="textEnd"
        android:visibility="gone"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@id/line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:background="#DAD8D8"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
               style="@style/operatorButton"
                android:text="C"
                android:textSize="30sp"
                android:onClick="on_clear_click" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_btn"
                style="@style/operatorButton"
                app:icon="@drawable/baseline_arrow_back_24"
                android:onClick="on_back_click"
                android:contentDescription="back btn"
                app:iconTint="#FF9800"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:id="@+id/modulo_btn"
                android:onClick="on_operator_click"
                android:text="%"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:id="@+id/divide_btn"
                android:onClick="on_operator_click"
                android:text="/"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="7"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="8"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="9"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:id="@+id/mul_btn"
                android:onClick="on_operator_click"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="4"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="5"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="6"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:id="@+id/add_btn"
                android:onClick="on_operator_click"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="1"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="2"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="3"/>
            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:id="@+id/sub_btn"
                android:onClick="on_operator_click"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                style="@style/operatorButton"
                android:id="@+id/allClear_btn"
                android:text="AC"
                android:onClick="on_allClear_click"
                android:textSize="20sp"
                android:textColor="#FBD0D0"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:onClick="on_number_click"
                android:text="0"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:id="@+id/point_btn"
                android:onClick="on_number_click"
                android:text="."
                android:textStyle="bold"/>
            <com.google.android.material.button.MaterialButton
                style="@style/commonButton"
                android:id="@+id/equals_btn"
                android:textColor="@color/white"
                android:backgroundTint="#FF9800"
                android:onClick="on_equalTo_click"
                android:text="="
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>